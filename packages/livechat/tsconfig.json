{
	"compilerOptions": {
		"module": "CommonJS",
		"moduleResolution": "node",
		"target": "es2018",
		"outDir": "./dist",
		"allowJs": true,
		"checkJs": false,
		"noImplicitAny": true,
		"jsx": "react-jsx",
		"jsxImportSource": "preact",
		"esModuleInterop": true,
	},
	"exclude": [
		"./node_modules",
		"./dist"
	]
}
